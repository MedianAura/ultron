{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "baseUrl": ".",
    "types": ["node", "reflect-metadata"],
    "paths": {
      "tslib": ["../../node_modules/tslib/tslib.d.ts"]
    }
  }
}
