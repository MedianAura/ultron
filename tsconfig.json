{
  "compilerOptions": {
    "declaration": false,
    "target": "esnext",
    "moduleResolution": "node",
    "module": "esnext",
    "removeComments": true,
    "strict": true,
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
